{
  "name": "@tippyjs/react",
  "version": "4.2.5",
  "description": "React component for Tippy.js",
  "main": "dist/tippy-react.umd.js",
  "module": "dist/tippy-react.esm.js",
  "unpkg": "dist/tippy-react.umd.min.js",
  "types": "index.d.ts",
  "sideEffects": false,
  "scripts": {
    "dev": "parcel demo/index.html --dist-dir .devserver",
    "build": "rollup --config",
    "test": "jest --coverage",
    "lint": "eslint \"{src,test}/**/*.js\"",
    "format": "prettier --write \"{src,test,demo}/**/*.{js,ts,json,css,md}\""
  },
  "author": "atomiks",
  "license": "MIT",
  "keywords": [
    "tooltip",
    "popover",
    "tippy",
    "react"
  ],
  "files": [
    "dist/",
    "headless/",
    "index.d.ts"
  ],
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>test/setup.js",
      "@testing-library/jest-dom/extend-expect"
    ],
    "coveragePathIgnorePatterns": [
      "test/setup.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,test,demo}/**/*.{js,ts,json,css,md}": [
      "prettier --write",
      "git add"
    ],
    "{src,test}/**/*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "tippy.js": "^6.3.7"
  },
  "peerDependencies": {
    "react": ">=16.8",
    "react-dom": ">=16.8"
  },
  "devDependencies": {
    "@babel/core": "^7.27.1",
    "@babel/preset-env": "^7.27.1",
    "@babel/preset-react": "^7.27.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.1.2",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^29.7.0",
    "babel-plugin-annotate-pure-calls": "^0.5.0",
    "core-js": "^3.42.0",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "framer-motion": "^12.9.4",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.1",
    "parcel": "^2.14.4",
    "prettier": "^3.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-spring": "^9.7.5",
    "rollup": "^4.40.1",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-terser": "^7.0.2",
    "styled-components": "^6.1.17",
    "typescript": "^5.8.3"
  },
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/atomiks/tippyjs-react.git"
  },
  "bugs": {
    "url": "https://github.com/atomiks/tippyjs-react/issues"
  },
  "homepage": "https://github.com/atomiks/tippyjs-react#readme"
}
